<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Tech Blog</title>
    <link rel="stylesheet" type="text/css" href="/css/jass.css" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
  </head>

  <body>
    <header>
      <nav>
        <a href="/">Home</a>
        <!-- If the user is logged in, show a logout button -->
        {{#if loggedIn}}
          <a href="/dashboard">Dashboard</a>
          <a id="logout" class="btn-no-style">Logout</a>
        {{else}}
          <!-- Otherwise, show a link to login -->
          <a href="/login">Login</a>
          <a href="/signup">Signup</a>
        {{/if}}
      </nav>
      <h1>The Tech Blog</h1>
    </header>

    <main>
      <div class="tech-blog">
        {{{body}}}
      </div>
    </main>
    <!-- If the user is logged in, load the JS script for when they logout -->
    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>