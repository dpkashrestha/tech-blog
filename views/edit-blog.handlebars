<div class="box-card">
  <h2 class="page-title">Edit Post</h2>
  <form class="form edit-form">
    <input type="hidden" id="blog-id" value="{{blog.id}}">
    <div class="form-group">
      <label for="blog-title">Title</label>
      <input class="form-input" type="text" id="blog-title" value="{{blog.title}}"/>
    </div>
    <div class="form-group">
      <label for="blog-content">Content</label>
      <input class="form-input" type="text" id="blog-content" value="{{blog.content}}"/>
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit">Update Post</button>
      <button class="btn btn-danger" type="button" id="delete-btn">Delete</button>
    </div>
  </form>
</div>

<script src="/js/edit-blog.js"></script>